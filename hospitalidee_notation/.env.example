# Extension IA Hospitalidée - Variables d'Environnement
# Copiez ce fichier vers .env et remplissez les valeurs

# API Mistral AI (obligatoire - solution franco-française)
MISTRAL_API_KEY=your_mistral_api_key_here

# Configuration Mistral AI
MISTRAL_MODEL=mistral-small-latest
MISTRAL_TEMPERATURE=0.3
MISTRAL_MAX_TOKENS=1000
MISTRAL_TOP_P=0.9
MISTRAL_PRESENCE_PENALTY=0.0
MISTRAL_FREQUENCY_PENALTY=0.0

# Configuration Streamlit
STREAMLIT_PORT=8501
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B35

# Logging et Debug
LOG_LEVEL=INFO
DEBUG_MODE=false

# Cache Redis (optionnel)
REDIS_URL=redis://localhost:6379
CACHE_DURATION=3600

# Performance et KPIs (selon Cursor rules)
MAX_RESPONSE_TIME=3.0
REQUIRED_PRECISION=0.85
REQUIRED_COHERENCE=0.90

# RGPD et Sécurité
ENABLE_LOGGING=true
ANONYMIZE_DATA=true
